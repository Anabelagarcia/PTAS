{{#if usuario}}
<h1>Atualizar jogo</h1>
<form action="/jogos/novo" method="post">
{{else}}
<h1> Cadastrar Jogo</h1>
    <form action="/jogos/{{jogo.titulo}}/update" method="post">
  {{/if}}

  <div>
        <label for="titulo">Titulo:</label>
        <input type="text" id="titulo" name="titulo" value="{{jogo.titulo}}"/>
      </div>
      <div>
        <label for="descricao">Descrição:</label>
        <input type="text" id="descricao" name="descricao" value="{{jogo.descricao}}"/>
      </div>
      {{#if jogo}}
        <input type="submit" value="Salvar" />
      {{else}}
        <input type="submit" value="Cadastrar" />
      {{/if}}
      </form>